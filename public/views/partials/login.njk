<style type="text/css">
    body {
        background: url('/assets/src/images/bg1.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .panel-transparent {
        background: none;
    }

    .panel-transparent .panel-heading {
        background: rgba(122, 130, 136, 0.5) !important;
        color: #fff;
    }

    .panel-transparent .panel-body {
        background: rgba(46, 51, 56, 0.4) !important;
    }
</style>
<div class="container">

    <div id="loginbox" style="margin-top:20%;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-transparent">
            <div class="panel-heading">
                <div class="panel-title">Вход</div>
            </div>

            <div style="padding-top:30px" class="panel-body">

                <form id="loginform" class="form-horizontal">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="fa fa-fw fa-user"></i></span>
                        <input class="form-control" ng-model="username" placeholder="Логин">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="fa fa-fw fa-key"></i></span>
                        <input type="password" class="form-control" ng-model="password" placeholder="Пароль">
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <button ng-click="login()" class="btn btn-info">
                                <i class="fa fa-fw fa-sign-in"></i> Вход
                            </button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>