<style type="text/css">
    body {
        background: url('/assets/src/images/bg2.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .panel-transparent {
        background: none;
    }

    .panel-transparent .panel-heading {
        background: rgba(122, 130, 136, 0.5) !important;
        color: #fff;
    }

    .panel-transparent .panel-body {
        background: rgba(46, 51, 56, 0.4) !important;
        padding: 30px;
    }

    .panel-transparent .panel-title {
        font-size: 30px;
    }

    .panel-transparent .panel-heading {
        padding: 15px 30px;
    }

    .panel-transparent .form-control {
        height: 35px;
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
        font-size: 16px;
    }

    .panel-transparent .btn {
        padding: 10px 50px;
    }

    .panel-transparent .btn-info {
        background-color: rgba(33, 125, 187, 0.20);
        border-color: rgba(32, 119, 178, 0.50);
    }

    .panel-transparent .btn-info:hover {
        background-color: rgba(33, 125, 187, 0.50);
        border-color: rgba(32, 119, 178, 0.8);
    }

    .panel-transparent .input-group-addon {
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
    }

    .panel-transparent select option {
        background: rgba(46, 51, 56, 0.4);
    }
</style>
<div class="container">

    <div id="loginbox" style="margin-top:10%;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-transparent">
            <div class="panel-heading">
                <div class="panel-title">Авторизация</div>
            </div>

            <div class="panel-body">

                <form id="loginform" name="formLogin" class="form-horizontal">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="fa fa-fw fa-user"></i></span>
                        <input class="form-control" ng-model="username" placeholder="Логин">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="fa fa-fw fa-key"></i></span>
                        <input type="password" class="form-control" ng-model="password" placeholder="Пароль">
                    </div>

                    <div style="margin-bottom: 25px;" class="input-group">
                        <span class="input-group-addon"><i class="fa fa-fw fa-key"></i></span>
                        <select ng-model="branch" class="form-control" required
                                ng-options="b.title for b in branches track by b._id">
                            <option value="">-- филиал --</option>
                        </select>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <button ng-click="login()" ng-disabled="formLogin.$invalid" class="btn btn-info">
                                <i class="fa fa-fw fa-sign-in"></i> Вход
                            </button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>