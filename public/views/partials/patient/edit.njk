<div class="container">
    <h3>
        Изменение реквизитов пациента
        <a ui-sref="patientView.services({id: patient._id})" title="Анкета пациента" class="btn btn-sm btn-link btn-success">
            <i class="fa fa-2x fa-fw fa-newspaper-o"></i>
        </a>
    </h3>

    <form class="form-horizontal" name="formPatient" novalidate>

        {% include "partials/patient/_form_fields.njk" %}

        <div class="row">
            <div class="col-sm-12 text-right">
                <button ui-sref="patientList" class="btn btn-danger">Отмена</button>
                <button ng-click="savePatient()" ng-disabled="formPatient.$invalid"
                        class="btn btn-success">Сохранить
                </button>
            </div>
        </div>

    </form>
</div>