<table class="table">
    <tbody>
    <tr>
        <td>
            <i title="Пол: {{ patient.sex.title }}" ng-if="patient.sex._id == 'male'"
               class="fa fa-lg fa-fw fa-mars"></i>
            <i title="Пол: {{ patient.sex.title }}" ng-if="patient.sex._id == 'female'"
               class="fa fa-lg fa-fw fa-venus"></i>
        </td>
        <td title="Дата рождения">
            <i class="fa fa-lg fa-fw fa-calendar"></i> {{ patient.dateOfBirth | date }}
        </td>
        <td title="Мобильный номер телефона">
            <i class="fa fa-lg fa-fw fa-mobile"></i> {{ patient.cellPhone || '---' }}
        </td>
        <td title="Городской номер телефона">
            <i class="fa fa-lg fa-fw fa-phone"></i> {{ patient.homePhone || '---' }}
        </td>
        <td title="Email">
            <i class="fa fa-lg fa-fw fa-envelope"></i> {{ patient.email || '---' }}
        </td>
        <td title="Адрес">
            <i class="fa fa-lg fa-fw fa-map-marker"></i> {{ patient.address || '---' }}
        </td>
        <td title="Организация">
            <i class="fa fa-lg fa-fw fa-building"></i> {{ patient.company || '---' }}
        </td>
    </tr>
    </tbody>
</table>
