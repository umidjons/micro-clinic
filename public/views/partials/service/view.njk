<h3>
    <button ui-sref="serviceEdit({id:service._id})" class="btn btn-xs btn-info">
        <i class="fa fa-fw fa-edit"></i>
    </button>
    {{ service.category.title }} / {{ service.title }}
</h3>

<table class="table table-hover">
    <tbody>
    <tr>
        <th>Категория</th>
        <td>{{ service.category.title }}</td>
    </tr>
    <tr>
        <th>Наименование</th>
        <td>{{ service.title }}</td>
    </tr>
    <tr>
        <th>Коротко</th>
        <td>{{ service.shortTitle }}</td>
    </tr>
    <tr>
        <th>Стоимость</th>
        <td>{{ service.price | number }}</td>
    </tr>
    <tr>
        <th>Состояние</th>
        <td>
            <span class="label"
                  ng-class="{'label-success':service.state._id == 'active','label-danger':service.state._id=='blocked'}">
                {{ service.state.title }}
            </span>
        </td>
    </tr>
    <tr>
        <th>Дата регистрации</th>
        <td>{{ service.created | date:'medium' }}</td>
    </tr>
    </tbody>
</table>